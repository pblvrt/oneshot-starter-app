{
  "name": "Next.js + Supabase Starter",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/oven-sh/bun:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  "forwardPorts": [3000, 8000, 3002, 9000],
  "portsAttributes": {
    "3000": {
      "label": "Next.js App",
      "onAutoForward": "openBrowser"
    },
    "8000": {
      "label": "Supabase API"
    },
    "3002": {
      "label": "Supabase Studio"
    },
    "9000": {
      "label": "Email (Inbucket)"
    }
  },
  "postCreateCommand": "cp .env.local.example .env.local 2>/dev/null || true && bun install",
  "postStartCommand": "sleep 10 && bun run dev"
}
